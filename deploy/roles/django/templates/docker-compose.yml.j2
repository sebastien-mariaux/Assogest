services:
  db:
    image: postgres
    env_file: .env
    volumes:
      - postgres_data:/var/lib/postgresql/data

  redis:
    image: redis:latest

  web:
    build:
      context: .
      dockerfile: Dockerfile.prod
    ports:
      - "8000:8000"
    volumes:
      - .:/app
      - ./staticfiles:/app/staticfiles
      - ./media:/app/media
    env_file:
      - .env
    environment:
      - DB_HOST=db
      - REDIS_HOST=redis
    depends_on:
      - db
      - redis

  celery:
    build:
      context: .
      dockerfile: Dockerfile.prod
    command: bash -c "cd /app && celery -A assogest worker --loglevel=info"
    env_file: .env
    environment:
      - DJANGO_SETTINGS_MODULE=assogest.settings.production
      - REDIS_HOST=redis
      - CELERY_BROKER_URL=redis://redis:6379/0
      - CELERY_RESULT_BACKEND=redis://redis:6379/0
      - DB_HOST=db
      - PYTHONPATH=/app
    volumes:
      - ./tmp/emails:/app/tmp/emails
    depends_on:
      - redis
      - db

volumes:
  postgres_data:
  static_volume:
  media_volume: